{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jump-frame-trainer",
  "version": "0.1.0",
  "identifier": "com.domin.jump-frame-trainer",

  "build": {
    "frontendDist": "../public"
  },

  "app": {
    "withGlobalTauri": true,

    "windows": [
      {
        "label": "main",
        "title": "Jump Frame Trainer",
        "url": "index.html",
        "width": 900,
        "height": 720,
        "visible": true
      },
      {
        "label": "hud",
        "title": "Jump Frame HUD",
        "url": "hud.html",
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focusable": false,
        "resizable": false,
        "width": 420,
        "height": 120,
        "x": 740,
        "y": 20,
        "visible": true
      }
    ],

    "security": {
      "capabilities": [
        {
          "identifier": "event-emit",
          "permissions": [
            "core:event:allow-emit",
            "core:event:allow-listen"
          ]
        }
      ]
    }
  }
}
